<body>

    <div id="header">
        <ul>
            <li class="menu" id="home"><a href="#">Home</a></li>
            <li class="menu" id="about"><a href="#">About</a></li>
            <li class="menu" id="ser"><a href="#">Services</a></li>
            <li class="menu" id="con"><a href="#">Contact</a></li>
        </ul>
    </div>
    
    <script src="js/jquery-3.7.1.min.js"></script>
    
    <script>
    	$(document).ready(function(){
    		
    		$('.menu').hover(
    				funcion(){
    					if(id="home"){
    						$(this).attr("#home", "background-color: gray");
    					}else if(id="about"){
    						$(this).attr("#about", "background-color: gray");
    					}else if(id= "ser"){
    						$(this).attr("#ser", "background-color: gray");
    					}else(id= "con"){
    						$(this).attr("#con", "background-color: gray");
    					},
    					
    					funcion(){
    						$(this).attr(".menu", "background-color: black");
    					}
    					
    					
    				});
    	});
    
    
    </script>
